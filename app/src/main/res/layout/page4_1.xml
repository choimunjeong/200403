<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            // 관광지 보기 버튼
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/icon_page4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cardview_no_img" />

            // 로고
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/logo_page4_1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/cardview_no_img"/>

            // 마이페이지 버튼
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/myPg_page4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cardview_no_img"/>
        </LinearLayout>

        // 타이틀
        <TextView
            android:id="@+id/title_page4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="최단 경로 안내"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="bottom"/>

        // 타이틀 세부 내용
        <TextView
            android:id="@+id/detail_page4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="슈니님이 선택한 도시의 최단 경로를 안내합니다."
            android:textColor="#808080"/>


        // 맵 뷰
        <WebView
            android:id="@+id/mabView_page4_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center"
            android:background="#8888"/>

        // 경로 상세정보
        <TextView
            android:id="@+id/routeDetail_page4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경로 상세 정보"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="true"
            android:textColor="#ffff"
            android:gravity="center"
            android:background="#888888"/>

        // 경로 들어갈 자리

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            // 경로 수정 버튼
            // 클릭 가능
            <TextView
                android:id="@+id/routeMod_page4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="경로 수정"
                android:textSize="15dp"
                android:gravity="center"
                android:background="#888"
                android:clickable="true"
                android:textColor="#ffffff" />

            // 일정 등록 버튼
            // 클릭 가능
            <TextView
                android:id="@+id/routeSave_page4_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일정 등록"
                android:gravity="center"
                android:textSize="15dp"
                android:background="#888"
                android:clickable="true"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>1
</LinearLayout>